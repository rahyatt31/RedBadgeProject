@model IEnumerable<GameLibrary.Model.Game.GameListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Game Library</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Find by name: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("ID", "Index", new { sortOrder = ViewBag.GameIDSortParm })
