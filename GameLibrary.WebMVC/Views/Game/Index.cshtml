            @Html.ActionLink("Name", "Index", new { sortOrder = ViewBag.GameNameSortParm })
        </th>
        <th>
            @Html.ActionLink("Genre", "Index", new { sortOrder = ViewBag.GameGenreSortParm })
        </th>
        <th>
            Online?
        </th>
        <th>
            Muliplayer?
        </th>
        <th>
            @Html.ActionLink("Advisory Rating", "Index", new { sortOrder = ViewBag.GameAdvisoryRatingSortParm })
        </th>
        <th>
            @Html.ActionLink("Rating", "Index", new { sortOrder = ViewBag.GameRatingSortParm })
        </th>
        <th>
            @Html.ActionLink("Consoles", "Index", new { sortOrder = ViewBag.ConsoleIDSortParm })
        </th>
        <th>
            @Html.ActionLink("Publisher", "Index", new { sortOrder = ViewBag.PublisherIDSortParm })
        </th>
        <th>
            @Html.ActionLink("Release Date", "Index", new { sortOrder = ViewBag.GameReleaseDateSortParm })
        </th>
        <th>
            @Html.ActionLink("GameStop will pay you...", "Index", new { sortOrder = ViewBag.GameGameStopSortParm })
        </th>
        <th></th>
    </tr>

